# Server Configuration
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database
# For Docker development setup (default from docker-compose.yml)
DATABASE_URL="postgresql://user:password@localhost:5432/mydb?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OAuth Configuration - Google (Required)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# OAuth Configuration - Facebook (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback

# Security (Optional)
# SESSION_SECRET=your-session-secret-key-minimum-32-characters

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_FACEBOOK_AUTH=false
ENABLE_EMAIL_NOTIFICATIONS=false

# Monitoring (Optional)
# SENTRY_DSN=https://your-sentry-dsn-url

